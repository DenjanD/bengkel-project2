@model IEnumerable<Proyek2_Bengkel.Models.SaleDetail>

@{
    ViewData["Title"] = "Data Rincian Penjualan";
}

<h1>Data Rincian Penjualan</h1>

<p>
    <a asp-action="Create">Tambah Data</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SparePart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sale.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SparePart.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Rincian</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Hapus</a>
            </td>
        </tr>
}
    </tbody>
</table>
