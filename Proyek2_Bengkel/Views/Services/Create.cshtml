@model Proyek2_Bengkel.Models.Service

@{
    ViewData["Title"] = "Tambah Data";
}

<h1>Tambah Data</h1>

<h4>Servis</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerName"></select>
            </div>
            <div class="form-group">
                <label asp-for="ServiceCategoryId" class="control-label"></label>
                <select asp-for="ServiceCategoryId" class ="form-control" asp-items="ViewBag.ServiceCategoryName"></select>
            </div>
            <div class="form-group">
                <label asp-for="Complaint" class="control-label"></label>
                <input asp-for="Complaint" class="form-control" />
                <span asp-validation-for="Complaint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleName" class="control-label"></label>
                <input asp-for="VehicleName" class="form-control" />
                <span asp-validation-for="VehicleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehiclePlate" class="control-label"></label>
                <input asp-for="VehiclePlate" class="form-control" />
                <span asp-validation-for="VehiclePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceDate" class="control-label"></label>
                <input asp-for="ServiceDate" class="form-control" />
                <span asp-validation-for="ServiceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- <label asp-for="TotalCost" class="control-label"></label> -->
                <input asp-for="ServiceCost" class="form-control" type="hidden" value="0"/>
                <span asp-validation-for="ServiceCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tambah Data" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Kembali ke Tabel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
